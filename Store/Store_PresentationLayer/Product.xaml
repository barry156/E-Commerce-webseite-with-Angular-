<UserControl x:Class="Store_PresentationLayer.Product"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Store_PresentationLayer"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="750">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Image x:Name="img_product" Source="Assets/img/product-1.jpg" Height="100" Width="100" Grid.Column="0"/>
        <Label x:Name="lbl_name" Content="Product 1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <Label x:Name="lbl_price" Content="200€" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <Button x:Name="btn_add" Content="Zum Warenkorb hinzufügen" Grid.Column="3" Width="200" PreviewMouseLeftButtonDown="btn_add_PreviewMouseLeftButtonDown"/>
    </Grid>
</UserControl>
